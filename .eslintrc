{
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "es6": true,
    "jest": true
  },
  "globals": {
    "Class": true,
    "Iterable": true,
    "Iterator": true,
    "IteratorResult": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "jest",
    "flowtype"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "class-methods-use-this": 0,
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "no-plusplus": 0,
    "semi": [
      "error",
      "never"
    ],
    "spaced-comment": 0,
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}
